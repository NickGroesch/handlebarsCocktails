<h1>Drinks containing {{search}}</h1>

<div id="carouselExampleIndicators" class="carousel slide text-light bg-dark" data-ride="carousel">
    <ol class="carousel-indicators">
        {{#each drinkDeets}}
        {{#if @first}}
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        {{else}}
        <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}"></li>
        {{/if}}
        {{/each}}

    </ol>
    <div class="carousel-inner">
        {{#each drinkDeets}}
        {{#if @first}}
        <div class="carousel-item active">
            {{else}}
            <div class="carousel-item">
                {{/if}}
                <h1>{{this.name}}</h1>
                <p>{{this.instructions}}</p>
                <div class="row">
                    <div class="col-3">
                        <ul class="text-left">
                            {{#each this.gredients}}
                            <li>{{this.name}} {{#if this.amount}}:{{/if}} {{this.amount}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-9">
                        <img style="width:500px; height:500px" src="{{this.pic}}" alt="{{this.name}}" srcset="">
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <script>
        $(() => {
            $('.carousel').carousel()
        })
    </script>